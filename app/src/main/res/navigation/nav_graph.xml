<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

        <!-- Define fragments -->
        <fragment
            android:id="@+id/homeFragment"
            android:name="com.tasty.recipesapp.ui.home.HomeFragment"
            android:label="Home Fragment"
            tools:layout="@layout/home_fragment" />

        <!-- Define other fragments -->
        <fragment
            android:id="@+id/recipesFragment"
            android:name="com.tasty.recipesapp.ui.recipe.RecipesFragment"
            android:label="Recipes Fragment"
            tools:layout="@layout/recipes_fragment" />
        <fragment
            android:id="@+id/profileFragment"
            android:name="com.tasty.recipesapp.ui.profile.ProfileFragment"
            android:label="Profile Fragment"
            tools:layout="@layout/profile_fragment" />
        <fragment
            android:id="@+id/recipeDetailFragment"
            android:name="com.tasty.recipesapp.ui.recipe.RecipeDetailFragment"
            android:label="Recipe Detail Fragment"
            tools:layout="@layout/recipe_detail_fragment" />
        <fragment
            android:id="@+id/addNewRecipeFragment"
            android:name="com.tasty.recipesapp.ui.recipe.NewRecipeFragment"
            android:label="Add/Edit Recipe Fragment"
            tools:layout="@layout/new_recipe_fragment" />
        <!-- Define argument outside of action -->


        <!-- Define connections between fragments -->
        <action
            android:id="@+id/action_recipesFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />

        <!-- Add other connections or actions as needed -->
        <action
            android:id="@+id/action_homeFragment_to_recipesFragment"
            app:destination="@id/recipesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_profileFragment_to_recipesFragment"
            app:destination="@id/recipesFragment" />
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_recipesFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_recipesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_recipesFragment_to_addNewRecipeFragment"
            app:destination="@id/addNewRecipeFragment" />

        <!-- Additional actions for ProfileFragment -->



</navigation>
