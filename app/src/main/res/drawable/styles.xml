<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="CustomSubtitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="CustomHeadingStyle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/heading1_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>


    <!-- Styles for Headings -->
    <style name="Heading1">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <!-- Add other attributes like font family, letter spacing, etc., if needed -->
    </style>

    <style name="Heading2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">10dp</item>
        <!-- Add other attributes like font family, letter spacing, etc., if needed -->
    </style>

    <style name="Heading3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:textStyle">italic</item>
        <!-- Add other attributes like font family, letter spacing, etc., if needed -->
    </style>

    <!-- Define more styles for other headings as needed -->


    <!-- Styles for Buttons -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textColor">@color/white</item>
        <!-- You may add padding, corner radius, etc., in the button's background drawable -->
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/secondary_button_background</item>
        <item name="android:textColor">@color/black</item>
        <!-- You may add padding, corner radius, etc., in the button's background drawable -->
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textAllCaps">false</item>
        <!-- You may add padding, corner radius, etc., in the button's background drawable -->
    </style>

    <!-- Define more styles for other button variations as needed -->

</resources>
