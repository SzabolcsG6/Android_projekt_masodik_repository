<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph"
            app:startDestination="@id/homeFragment">

        <fragment
                android:id="@+id/homeFragment"
                android:name="com.tasty.recipesapp.ui.home.HomeFragment"
                android:label="Home Fragment"
                tools:layout="@layout/home_fragment" />

        <!-- Define other fragments and connections between them as needed -->
        <activity
                android:id="@+id/splashActivity"
                android:name="com.tasty.recipesapp.activities.SplashActivity"
                android:label="Splash Activity">
                <action
                        android:id="@+id/action_splash_to_main"
                        app:destination="@id/mainActivity" />
                <!-- Add other actions or extras as needed -->
        </activity>

        <activity
                android:id="@+id/mainActivity"
                android:name="com.tasty.recipesapp.activities.MainActivity"
                android:label="Main Activity" />
        <fragment
                android:id="@+id/recipesFragment"
                android:name="com.tasty.recipesapp.ui.recipe.RecipesFragment"
                android:label="Recipes Fragment"
                tools:layout="@layout/recipes_fragment" />
        <action
            android:id="@+id/action_recipesFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment">
                <argument
                    android:name="recipeId"
                    app:argType="integer" />
        </action>
        <fragment
                android:id="@+id/recipeDetailFragment"
                android:name="com.tasty.recipesapp.ui.recipe.RecipeDetailFragment"
                android:label="Recipe Detail Fragment"
                tools:layout="@layout/recipe_detail_fragment" />

        <fragment
                android:id="@+id/profileFragment"
                android:name="com.tasty.recipesapp.ui.profile.ProfileFragment"
                android:label="Profile Fragment"
                tools:layout="@layout/profile_fragment" />

        <!-- Connection between RecipesFragment and RecipeDetailFragment -->


</navigation>
